<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data><variable
        name="notify"
        type="com.iot.covid.duantotnghiep.model.notification.NotificationDTO" /></data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_notify"
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtContentNotice"
                    android:text="@{notify.title}"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/txtNameNotice"
                    android:text="@{notify.name}"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtRoomNotice"
                        android:text="Phòng "
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:text="@{notify.room}"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/txtAgeNotice"
                        android:text=" Tuổi"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:text="@{notify.age}"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:id="@+id/txtWarningNotice"
                        android:text="@{notify.status}"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_gravity="left"
                    android:background="@drawable/ic_notice"
                    android:layout_width="68dp"
                    android:layout_height="68dp">
                </ImageButton>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>